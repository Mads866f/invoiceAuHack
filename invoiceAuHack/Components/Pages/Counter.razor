@page "/counter"

@using invoiceAuHack.Models
@inject NavigationManager Navigation

<h3>Invoice Form</h3>

<EditForm Model="@invoice" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="date">Date</label>
        <InputDate @bind-Value="invoice.Date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="invoiceNumber">Invoice Number</label>
        <InputText @bind-Value="invoice.InvoiceNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label for="amount">Amount</label>
        <InputNumber @bind-Value="invoice.Amount" class="form-control" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <InputTextArea @bind-Value="invoice.Description" class="form-control" />
    </div>

    <div class="form-group">
        <label for="sender">Sender</label>
        <InputText @bind-Value="invoice.Sender" class="form-control" />
    </div>

    <div class="form-group">
        <label for="receiver">Receiver</label>
        <InputText @bind-Value="invoice.Receiver" class="form-control" />
    </div>

    <div class="form-group">
        <label for="paymentDate">Payment Date</label>
        <InputDate @bind-Value="invoice.PaymentDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@if (submitted)
{
<p>Invoice Submitted!</p>
}

@code {
private InvoiceModel invoice = new InvoiceModel();
private bool submitted = false;

private void HandleValidSubmit()
{
// Here you can handle the form submission, such as saving to a database or API
submitted = true;
Console.WriteLine("Invoice submitted successfully!");
}
}

